<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/newListButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="New List"
        app:layout_constraintEnd_toEndOf="@+id/menuImageView"
        app:layout_constraintStart_toStartOf="@+id/menuImageView"
        app:layout_constraintTop_toBottomOf="@+id/menuImageView" />

    <Button
        android:id="@+id/pastListsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="Past Lists"
        app:layout_constraintEnd_toEndOf="@+id/menuImageView"
        app:layout_constraintStart_toStartOf="@+id/menuImageView"
        app:layout_constraintTop_toBottomOf="@+id/newListButton" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="Settings"
        app:layout_constraintEnd_toEndOf="@+id/menuImageView"
        app:layout_constraintStart_toStartOf="@+id/menuImageView"
        app:layout_constraintTop_toBottomOf="@+id/pastListsButton" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="About"
        app:layout_constraintStart_toStartOf="@+id/menuImageView"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton" />

    <ImageView
        android:id="@+id/menuImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="@+id/aboutButton"
        app:layout_constraintEnd_toEndOf="@+id/menuImageView"
        app:layout_constraintTop_toTopOf="@+id/aboutButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>