<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="200dp" android:orientation="horizontal">


    <ImageView android:id="@+id/petImageView" android:layout_width="100dp"
        android:layout_height="100dp" android:layout_marginStart="50dp"
        android:layout_marginTop="50dp" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView android:id="@+id/petDateOfBirthView" android:layout_width="100dp"
        android:layout_height="wrap_content" android:layout_marginStart="25dp"
        android:layout_marginTop="25dp" android:layout_marginEnd="25dp" android:textSize="14sp"
        android:textStyle="bold" app:layout_constraintEnd_toStartOf="@+id/editPetButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/petImageView"
        app:layout_constraintTop_toBottomOf="@+id/petNameView" />

    <TextView android:id="@+id/petNameView" android:layout_width="100dp"
        android:layout_height="wrap_content" android:layout_marginStart="25dp"
        android:layout_marginTop="50dp" android:textSize="14sp" android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/petImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/petSexView" android:layout_width="100dp"
        android:layout_height="wrap_content" android:layout_marginTop="25dp" android:textSize="14sp"
        android:textStyle="bold" app:layout_constraintEnd_toStartOf="@+id/editPetButton"
        app:layout_constraintStart_toStartOf="@+id/petDateOfBirthView"
        app:layout_constraintTop_toBottomOf="@+id/petDateOfBirthView" tools:ignore="UnknownId" />

    <Button android:id="@+id/editListPet" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="UPDATE"
        app:layout_constraintBottom_toBottomOf="@+id/petImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/petDateOfBirthView"
        app:layout_constraintTop_toTopOf="@+id/petImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>